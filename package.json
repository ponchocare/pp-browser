{
  "name": "@ponchopay/pp-browser",
  "version": "1.0.4",
  "description": "Tools to integrate PonchoPay on the browser",
  "type": "module",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "dist/src/index.d.ts",
      "import": "dist/src/index.js"
    },
    "./pp-payment": {
      "types": "dist/src/PpPayment.d.ts",
      "import": "dist/src/PpPayment.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/src"
  ],
  "scripts": {
    "clean": "rimraf build dist",
    "start": "npm run clean && tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "build": "npm run clean && tsc && rollup -c",
    "test": "playwright test",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^9.2.1",
    "@playwright/test": "^1.38.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@web/dev-server": "^0.1.34",
    "concurrently": "^5.3.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.4.1",
    "rimraf": "^5.0.1",
    "rollup": "^3.29.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ponchocare/pp-browser.git"
  },
  "keywords": [
    "ponchopay",
    "web",
    "component",
    "tools"
  ],
  "author": "info@ponchopay.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ponchocare/pp-browser/issues"
  },
  "homepage": "https://github.com/ponchocare/pp-browser#readme",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-undef": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
